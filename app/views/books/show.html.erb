

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
<div class='row'>
       <div class="col-md-3">
<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @newbook %>
</div>

 <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
        <%= image_tag @user.get_profile_image %>
         <nav>
           <%=link_to @book.user.name,user_path(@user.id) %>
         </nav>

    </td>
    <td><%= link_to @book.title,book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><% if @user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete,data: {confirm: "削除しますか？"} %>
  <% end %> </td>
<% end %>
    </tr>
    </table>
  </div>
</div>
</div>



